@model HighBoard
@{
    ViewData["Title"] = "Personal Data";
}
<style>
    .badge-info {
        color: white !important;
        background-color: #17a2b8 !important;
    }
</style>
<div class="container py-5">
    <h2 class="text-center mb-5 font-weight-bold">Personal Data</h2>
    <div class="card shadow-lg rounded-lg overflow-hidden">
        <div class="row no-gutters">
            @if (!string.IsNullOrEmpty(Model.Picture))
            {
                <div class="col-lg-4">
                    <img src="@Model.Picture" class="card-img h-100 object-fit-cover" alt="@Model.Name">
                </div>
            }
            <div class="@(string.IsNullOrEmpty(Model.Picture) ? "col-lg-12" : "col-lg-8")">
                <div class="card-body p-5">
                    <h3 class="card-title mb-4 text-primary">@Model.Name</h3>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <p class="card-text">
                                <i class="fas fa-user-tie mr-2"></i><strong>Job Title:</strong>
                                <span class="badge badge-info">@Model.JobTitle</span>
                            </p>
                            <p class="card-text"><i class="fas fa-info-circle mr-2"></i><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</p>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Edit", "HighBoard", new { id = Model.Id })" class="btn btn-primary mr-2">
                            <i class="fas fa-edit mr-1"></i> Edit
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('هل أنت متأكد أنك تريد حذف هذا المسؤول؟');">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}