@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Models.Student>

@{
    ViewData["Title"] = "Index";
}

<button type="button" class="btn btn-primary">Results</button>

<h1 class="text-center">All Students</h1>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayName("Department")
            </th>
            <th>
                @Html.DisplayName("Payment Fees")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                  @ViewBag.DepartmentNames[item.DepartmentId]
            </td>
            @if(item.PaymentFees)
            {
                <td>
                        @Html.DisplayName("Paid")
                </td>
                }
                else
                {
                    <td>
                        @Html.DisplayName("UnPaid")
                    </td>
                }
            <td>
                @Html.ActionLink("i", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("-", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
