@model ViewModels.UniFileVMs.UniFileVM

@{
    ViewData["Title"] = "AddVideo";
}
<link rel="stylesheet" href="/css/News.css">

<h1 style="text-align:center; margin-top: 100px;">Add Video</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;margin-bottom: 250px;">
        <h4 class="card-title text-center">Add Form</h4>
        <hr />
        <form asp-action="SaveVideo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Embeded Link From Facebook:</label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ContentType" class="form-control" />
            </div>
            <div class="form-group text-center" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <br/>
        <a asp-action="EmbededLink">
            How to Obtain On Empeded Link?
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

