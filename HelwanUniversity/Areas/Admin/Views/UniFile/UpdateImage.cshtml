@model ViewModels.UniFileVMs.UniFileVM2

@{
    ViewData["Title"] = "UpdateImage";
}
<link rel="stylesheet" href="/css/File.css">

<h1>Update Image</h1>

<h4>Edit Form</h4>
<hr />
<div class="d-flex justify-content-center">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <form asp-action="SaveUpdate" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="ContentType" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label style="font-size: 20px" class="control-label">Current Picture:</label>
                            <div id="currentPicturePreview">
                                <img src="@Model.File" alt="Current Image" class="img-fluid" />
                            </div>
                        </div>
                        <hr style="border: 1px solid #000; width: 150%;">
                        <div class="form-group">
                            <label style="font-size: 20px" asp-for="ImgPath" class="control-label"></label>
                            <input asp-for="ImgPath" type="file" class="form-control-file" id="pictureInput" style="display:none;" />
                            <div id="picturePreview" class="mt-2"></div>
                            <label for="pictureInput" class="custom-file-upload">
                                <i class="fa fa-upload"></i> Upload Picture
                            </label>
                            <span asp-validation-for="ImgPath" class="text-danger"></span>
                        </div>
                        <center>
                            <div class="form-group" style="margin-left: 120px;">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="/js/File.js"></script>
}
