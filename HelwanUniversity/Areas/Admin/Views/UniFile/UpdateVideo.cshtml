@model ViewModels.UniFileVMs.UniFileVM2

@{
    ViewData["Title"] = "UpdateVideo";
}
<link rel="stylesheet" href="/css/News.css">

<h1>Update Video</h1>
<div class="d-flex justify-content-center">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;margin-bottom: 270px;">
        <h4 class="card-title text-center">Add Form</h4>
        <hr />
        <form asp-action="SaveUpdateVideo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Embeded Link From Facebook:</label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ContentType" class="form-control" />
            </div>
            <div class="form-group text-center" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <a asp-action="EmbededLink">
                How to Obtain On Empeded Link?
            </a>
        </form>
    </div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
