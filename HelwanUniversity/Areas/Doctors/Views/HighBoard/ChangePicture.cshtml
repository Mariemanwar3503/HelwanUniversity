@model ViewModels.Picture

@{
    ViewData["Title"] = "Change Picture";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/EditPerson.css">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-bottom: 0;
            border-radius: 10px 10px 0 0;
            text-align: center;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-control-file {
            margin-top: 10px;
        }

        .img-preview {
            margin-top: 20px;
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="SaveChange" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group">
                                <input type="hidden" asp-for="Id" class="form-control" readonly />
                            </div>

                            <div class="form-group mb-4" style="margin-top: 70px;">
                                <input asp-for="MainPictureFile" type="file" class="form-control-file" id="pictureInput" style="display:none;" />
                                <div id="picturePreview" class="mt-2"></div>
                                <label for="pictureInput" class="custom-file-upload">
                                    <i class="fa fa-upload"></i> Upload Profile Picture
                                </label>
                                <span asp-validation-for="MainPictureFile" class="text-danger"></span>
                            </div>

                            @if (Model.MainPicture != null)
                            {
                                <div class="form-group">
                                    <label class="control-label">Current Picture</label>
                                    <img src="@Model.MainPicture" alt="Current Picture" class="img-preview" />
                                </div>
                            }

                            <div class="form-group text-center">
                                <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/File.js"></script>
</body>
</html>
