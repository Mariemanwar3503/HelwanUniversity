@page
@model HelwanUniversity.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="text-center mt-4">
        <p class="lead">Logging out...</p>
        <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "University", new { area = "Students" })" method="post"></form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('logoutForm').submit();
    </script>
}

