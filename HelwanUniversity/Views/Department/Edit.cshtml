@model ViewModels.DepartmentVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DepartmentVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HeadId" class="control-label"></label>
                <select asp-for="HeadId" class="form-control" asp-items="@ViewBag.Heads">
                    <option disabled selected>Select</option>
                </select>                
                <span asp-validation-for="HeadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class="form-control" asp-items="@ViewBag.Faculities">
                    <option disabled selected>Select</option>
                </select>                     
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allowed" class="control-label"></label>
                <input asp-for="Allowed" class="form-control" />
                <span asp-validation-for="Allowed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
