@using Models.Enums
@model ViewModels.DoctorVM

<h2>Edit</h2>

<form asp-action="SaveEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="col-md-6">
        <label asp-for="JobTitle" class="form-label">Job Title</label>
        <select asp-for="JobTitle" class="form-select">
            <option value="@JobTitle.Prof_Doctor">Professor Doctor</option>
            <option value="@JobTitle.Doctor">Doctor</option>
        </select>
    </div>

    <div class="mb-4">
        <input asp-for="Picture" type="file" class="form-control-file" id="profilePicture" style="display:none;" />
        <div id="picturePreview" class="mt-2"></div>
        <label for="profilePicture" class="custom-file-upload">
            <i class="fa fa-upload"></i> Upload Profile Picture
        </label>
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Gender" class="form-label">Gender</label>
            <select asp-for="Gender" class="form-select">
                <option value="@Gender.Male">Male</option>
                <option value="@Gender.Female">Female</option>
            </select>
        </div>
        <div class="col-md-6">
            <label asp-for="Religion" class="form-label">Religion</label>
            <select asp-for="Religion" class="form-select">
                <option value="@Religion.Muslim">Muslim</option>
                <option value="@Religion.Christian">Christian</option>
                <option value="@Religion.Other">Other</option>
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>