@model Faculty

@{
    ViewData["Title"] = $"{Model.Name} - تفاصيل الكلية";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    .faculty-details-container {
        margin-top: 40px;
    }

    .faculty-image {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        height: 400px;
        object-fit: cover;
        width: 200%;
    }

    .faculty-info {
        margin-top: 20px;
        font-size: 1.2em;
    }

        .faculty-info strong {
            font-size: 1.2em;
        }

        .faculty-info span {
            font-weight: bold;
            color: #007bff;
            display: inline-block;
            margin-left: 10px;
        }

    .faculty-description {
        margin-top: 20px;
        font-size: 1.1em;
        line-height: 1.6;
    }

    .department-list {
        margin-top: 20px;
        padding-left: 20px;
        list-style-type: none;
    }

        .department-list li {
            margin-bottom: 10px;
            font-size: 1.1em;
            position: relative;
            padding-left: 20px;
        }

            .department-list li::before {
                content: "\f058"; 
                font-family: "Font Awesome 5 Free";
                font-weight: 900;
                position: absolute;
                left: 0;
                color: #007bff;
            }

    .section-title {
        border-bottom: 3px solid #007bff;
        display: inline-block;
        margin-bottom: 20px;
        padding-bottom: 5px;
        font-size: 1.5em;
    }

    .faculty-detail {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .faculty-image-wrapper {
        flex: 1;
        margin-right: 20px;
    }

    .faculty-info-wrapper {
        flex: 2;
    }
</style>

<div class="container faculty-details-container">
    <h2 class="text-center">@Model.Name Faculty</h2>
    <div class="faculty-detail mt-4">
        <div class="faculty-image-wrapper">
            @if (!string.IsNullOrEmpty(Model.Picture))
            {
                <img src="@Model.Picture" class="faculty-image img-fluid" alt="@Model.Name">
            }
        </div>
        <div class="faculty-info-wrapper">
            <p class="faculty-description">@Model.Description</p>
            <div class="faculty-info">
                <strong>Visiters:</strong> <span>@Model.ViewCount</span>
            </div>
            <div class="faculty-info">
                <strong>Departments Count:</strong> <span>@Model.Departments.Count</span>
            </div>
            <br/>
            <h3 class="section-title">Department:</h3>
            <ul class="department-list">
                @foreach (var department in Model.Departments)
                {
                    <li>@department.Name</li>
                }
            </ul>
        </div>
    </div>
</div>


