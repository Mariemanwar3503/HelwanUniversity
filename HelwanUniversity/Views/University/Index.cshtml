@{
    Layout = null;
}
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Helwan Univeristy - Home Page</title>
    <link rel="icon" href="/HU-Color.png" type="image/png">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400;1,700&family=Cairo:wght@200..1000&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
<div class="loader-container">
    <svg class="pl" viewBox="0 0 200 200" width="200" height="200" xmlns="http://www.w3.org/2000/svg">
        <defs>
            <linearGradient id="pl-grad1" x1="1" y1="0.5" x2="0" y2="0.5">
                <stop offset="0%" stop-color="hsl(313,90%,55%)" />
                <stop offset="100%" stop-color="hsl(223,90%,55%)" />
            </linearGradient>
            <linearGradient id="pl-grad2" x1="0" y1="0" x2="0" y2="1">
                <stop offset="0%" stop-color="hsl(313,90%,55%)" />
                <stop offset="100%" stop-color="hsl(223,90%,55%)" />
            </linearGradient>
        </defs>
        <circle class="pl__ring" cx="100" cy="100" r="82" fill="none" stroke="url(#pl-grad1)" stroke-width="36" stroke-dasharray="0 257 1 257" stroke-dashoffset="0.01" stroke-linecap="round" transform="rotate(-90,100,100)" />
        <line class="pl__ball" stroke="url(#pl-grad2)" x1="100" y1="18" x2="100.01" y2="182" stroke-width="36" stroke-dasharray="1 165" stroke-linecap="round" />
    </svg>
</div>

    <header class="masthead ">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="University" asp-action="Index">
                    <img class="Hulogo" src="~/logo-white-deskt-min.png" alt="Logo"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link NavItems" style="color: white;" asp-area="" asp-controller="University" asp-action="Index">
                                <img style="margin-bottom: 4px;" alt="svgImg" src="data:image/svg+xml;base64," />
                                الرئيسية
                                </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="" asp-controller="#" asp-action="#">
                                <img style="margin-bottom: 4px;" width="25" height="25" src="https://img.icons8.com/external-fauzidea-detailed-outline-fauzidea/64/FFFFFF/external-college-building-fauzidea-detailed-outline-fauzidea-2.png" alt="external-college-building-fauzidea-detailed-outline-fauzidea-2" />
                                الكليات
                            </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="" asp-controller="UniFile" asp-action="News">
                                <img style="margin-bottom: 4px;" width="25" height="25" src="https://img.icons8.com/glyph-neue/64/FFFFFF/news.png" alt="news" />
                                الاخبار
                                </a>
                        </li>
                        <li class="nav-item" style="margin-left: 30px;">
                            <a class="nav-link NavItems" style="color: white;" asp-area="" asp-controller="#" asp-action="#">
                                <img width="23" height="23" src="https://img.icons8.com/ios/25/FFFFFF/email.png" alt="email" />
                                تواصل معنا</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <div class="theme-switcher">
                            <i class="fas fa-sun" id="theme-toggle" title="Toggle Theme"></i>
                        </div>
                        <li class="nav-item dropdown" style="margin-bottom:30px">
                            <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img style="margin-bottom: 10px;" width="55" height="55" src="https://img.icons8.com/3d-fluency/94/user-male-circle.png" alt="user-male-circle" />
                            </a>
                            <div class="dropdown-menu" aria-labelledby="userDropdown">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="dropdown-item" style="color: black; text-decoration: none" href="/Identity/Account/Manage">Account</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" style="text-decoration: none" href="/Identity/Account/Logout">Logout</a>
                                }
                                else
                                {
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a class="dropdown-item d-flex align-items-center" style="color: black; text-decoration: none" href="/Identity/Account/Register">
                                            <img width="20" height="20" src="https://img.icons8.com/ios/50/1A1A1A/add-user-male.png" alt="add-user-male" />
                                            <span style="margin-left: 10px;">Register</span>
                                        </a>
                                    }
                                    <a class="dropdown-item d-flex align-items-center" style="color: black; text-decoration: none" href="/Identity/Account/Login">
                                        <img width="15" height="15" src="https://img.icons8.com/ios/50/1A1A1A/enter-2.png" alt="login-icon" />
                                        <span style="margin-left: 10px;">Login</span>
                                    </a>
                                    <a class="dropdown-item d-flex align-items-center" style="color: black; text-decoration: none" href="/Identity/Account/Register">
                                        <img width="20" height="20" src="https://img.icons8.com/ios/50/1A1A1A/add-user-male.png" alt="add-user-male" />
                                        <span style="margin-left: 10px;">Register</span>
                                    </a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item text-danger" style="text-decoration: none" href="/Identity/Account/Logout">Logout</a>
                                }
                            </div>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7 py-5">
                    <h1 class="mb-4 arabic-text fw-bold" style="margin-top: 30px;">جامعة حلوان</h1>
                    <div style="margin-left: 40px; color: white; font-size : 22px"> ،تسعى جامعة حلوان أن تكون مؤسسة تعليمية وبحثية، رائدة فى التكنولوجيا والفنون</div>
                    <div style="margin-left: 160px; color: white; font-size : 22px">ومتميزة في التربية والعلوم وفقاً لمعايير الجودة العالمية</div>
                </div>
                <div class="col-lg-5">
                    <div class="py-5 px-4 masthead-cards">
                        <div class="d-flex">
                            <a href="#" class="w-50 pr-3 pb-4">
                                <div class="card border-0 border-bottom-red shadow-lg shadow-hover">
                                    <div class="card-body text-center">
                                        <div class="text-center">
                                            <i class="fa fa-info-circle fa-4x my-2"></i>
                                        </div>
                                        <div class="CardText">عن الجامعة</div>
                                    </div>
                                </div>
                            </a>
                            <a href="#" class="w-50 pl-3 pb-4">
                                <div class="card border-0 border-bottom-blue shadow-lg shadow-hover">
                                    <div class="card-body text-center">
                                        <div class="text-center">
                                            <i class="fas fa-map-marked-alt	 fa-4x my-2"></i>
                                        </div>
                                        <div class="CardText">خريطة الحرم الجامعي</div>
                                    </div>
                                </div>
                            </a>
                        <div class="shape"></div>
                    </div>
                </div>
            </div>
        </div>
        <svg style="pointer-events: none" class="wave" width="100%" height="50px" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1920 75">
            <defs>
                <style>
                    .a {
                        fill: none;
                    }

                    .b {
                        clip-path: url(#a);
                    }

                    .c,
                    .d {
                        fill: #f9f9fc;
                    }

                    .d {
                        opacity: 0.5;
                        isolation: isolate;
                    }
                </style>
                <clipPath id="a">
                    <rect class="a" width="1920" height="75"></rect>
                </clipPath>
            </defs>
            <title>wave</title>
            <g class="b">
                <path class="c" d="M1963,327H-105V65A2647.49,2647.49,0,0,1,431,19c217.7,3.5,239.6,30.8,470,36,297.3,6.7,367.5-36.2,642-28a2511.41,2511.41,0,0,1,420,48"></path>
            </g>
            <g class="b">
                <path class="d" d="M-127,404H1963V44c-140.1-28-343.3-46.7-566,22-75.5,23.3-118.5,45.9-162,64-48.6,20.2-404.7,128-784,0C355.2,97.7,341.6,78.3,235,50,86.6,10.6-41.8,6.9-127,10"></path>
            </g>
            <g class="b">
                <path class="d" d="M1979,462-155,446V106C251.8,20.2,576.6,15.9,805,30c167.4,10.3,322.3,32.9,680,56,207,13.4,378,20.3,494,24"></path>
            </g>
            <g class="b">
                <path class="d" d="M1998,484H-243V100c445.8,26.8,794.2-4.1,1035-39,141-20.4,231.1-40.1,378-45,349.6-11.6,636.7,73.8,828,150"></path>
            </g>
        </svg>
   </header>
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
    <script src="js/site.js"></script>
</body>
</html>

<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <p>&copy; 2024 Helwan Univeristy. All rights reserved.</p>
            <ul class="footer-links">
                <li><a href="#about">About Us</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="\Home\Privacy">Privacy Policy</a></li>
            </ul>
        </div>
    </div>
</footer>
